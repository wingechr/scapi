{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "scapi.schema.json",
  "definitions": {
    "identifier": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "integer", "boolean"]
        },
        "content": {
          "type": "string"
        },
        "multiple": {
          "type": "boolean"
        }
      }
    },
    "identifierCaseInsensitive": {
      "type": "string",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$"
    },
    "http": {
      "type": "string",
      "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
    }
  },
  "type": "object",
  "additionalProperties": false,
  "required": ["endpoints", "version", "description"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "endpoints": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["target", "source", "parameters", "description"],
        "properties": {
          "target": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path"],
            "properties": {
              "verb": {
                "$ref": "#/definitions/http"
              },
              "path": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/identifier"
                },
                "minItems": 1
              }
            }
          },
          "source": {
            "type": "object",
            "additionalProperties": false,
            "required": ["imports", "path"],
            "properties": {
              "imports": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/identifier"
                }
              },
              "path": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/identifierCaseInsensitive"
                }
              }
            }
          },
          "parameters": {
            "type": "object",
            "additionalProperties": false,
            "required": ["arguments"],
            "properties": {
              "arguments": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["name", "type", "description"],
                  "properties": {
                    "nameTarget": {
                      "$ref": "#/definitions/identifier"
                    },
                    "description": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "$ref": "#/definitions/type"
                    }
                  }
                }
              },
              "inputData": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "content", "description"],
                "properties": {
                  "nameTarget": {
                    "$ref": "#/definitions/identifier"
                  },
                  "description": {
                    "type": "string"
                  },
                  "name": {
                    "$ref": "#/definitions/identifier"
                  },
                  "content": {
                    "type": "string"
                  }
                }
              },
              "resourceId": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name"],
                "properties": {
                  "nameTarget": {
                    "$ref": "#/definitions/identifier"
                  },
                  "description": {
                    "type": "string"
                  },
                  "name": {
                    "$ref": "#/definitions/identifier"
                  },
                  "type": {
                    "$ref": "#/definitions/type"
                  }
                }
              },
              "outputData": {
                "type": "object",
                "additionalProperties": false,
                "required": ["content", "description"],
                "properties": {
                  "description": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "description": {
            "type": "string"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "inputs": {
                  "type": "object"
                },
                "output": {}
              }
            }
          },
          "authorization": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
