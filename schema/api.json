{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "identifier": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
        },
        "methodsAll": {
            "type": "string",
            "enum": [
                "get",
                "post",
                "put",
                "patch",
                "delete"
            ]
        },
        "methodsMain": {
            "type": "string",
            "enum": [
                "get",
                "post"
            ]
        },
        "arguments": {
            "$comment": "TODO"
        },
        "children": {
            "type": "array",
            "minItems": 1,
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "title": "pathNode",
                        "required": [
                            "children",
                            "path"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "children": {
                                "$ref": "#/definitions/children"
                            },
                            "path": {
                                "$ref": "#/definitions/identifier"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "title": "functionNode",
                        "required": [
                            "path",
                            "method"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "path": {
                                "$ref": "#/definitions/identifier"
                            },
                            "method": {
                                "$ref": "#/definitions/methodsMain"
                            },
                            "arguments": {
                                "$ref": "#/definitions/arguments",
                                "default": {}
                            },
                            "hasAuthentication": {
                                "type": "boolean",
                                "default": false
                            }
                        }
                    },
                    {
                        "type": "object",
                        "title": "restCollectionNode",
                        "required": [
                            "method"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "method": {
                                "$ref": "#/definitions/methodsMain"
                            },
                            "arguments": {
                                "$ref": "#/definitions/arguments",
                                "default": {}
                            },
                            "hasAuthentication": {
                                "type": "boolean",
                                "default": false
                            }
                        }
                    },
                    {
                        "type": "object",
                        "title": "restInstanceNode",
                        "required": [
                            "method",
                            "argument"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "method": {
                                "$ref": "#/definitions/methodsAll"
                            },
                            "argument": {
                                "$ref": "#/definitions/identifier"
                            },
                            "hasAuthentication": {
                                "type": "boolean",
                                "default": false
                            }
                        }
                    }
                ]
            }
        }
    },
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "children": {
            "$ref": "#/definitions/children"
        }
    },
    "required": [
        "children"
    ],
    "additionalProperties": false
}