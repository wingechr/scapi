{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "identifier": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
        },
        "type": {"type": "string", "enum": ["string", "number", "integer", "boolean", "array"]},
        "identifierCaseInsensitive": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$"
        },
        "https": {
            "type": "string",
            "enum": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE"
            ]
        }
    },
    "type": "object",
    "additionalProperties": false,
    "required": [
        "endpoints"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "endpoints": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "path",
                    "source"
                ],
                "properties": {
                    "path": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/identifier"
                        },
                        "minItems": 1
                    },
                    "source": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "imports",
                            "path"
                        ],
                        "properties": {
                            "imports": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/identifier"
                                }
                            },
                            "path": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/identifierCaseInsensitive"
                                }
                            }
                        }
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "name",
                                "type"
                            ],
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/identifier"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "default": {},
                                "source": {
                                    "type": "string"
                                },
                                "type": {"$ref": "#/definitions/type"},
                                "flag": {"type": "string"}
                            }
                        }
                    },
                    "arguments": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "name", "type"
                            ],
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/identifier"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "source": {
                                    "type": "string"
                                },
                                "type": {"$ref": "#/definitions/type"}
                            }
                        }
                    },
                    "http": {
                        "$ref": "#/definitions/https"
                    },
                    "input": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "name", "type"
                        ],
                        "properties": {
                            "name": {
                                "$ref": "#/definitions/identifier"
                            },
                            "description": {
                                "type": "string"
                            },
                            "source": {
                                "type": "string"
                            },
                            "type": {"$ref": "#/definitions/type"}
                        }
                    },
                    "output": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "description": {
                                "type": "string"
                            },                            
                            "type": {"$ref": "#/definitions/type"}
                        }
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        }
    }
}