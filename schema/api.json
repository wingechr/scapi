{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
        },
        "endpoint": {
            "title": "endpoint",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "httpMethod"
            ],
            "properties": {
                "httpMethod": {
                    "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
                },
                "path": {"$ref": "#/definitions/name", "description": "additional path item"}
            }
        },
        "pathsOrEndpoint": {
            "oneOf": [
                {
                    "$ref": "#/definitions/endpoint"
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "paths"
                    ],
                    "properties": {
                        "paths": {
                            "$ref": "#/definitions/paths"
                        },
                        "isArgument": {
                            "type":"boolean",
                            "default":false
                        }
                    }
                }
            ]
        },
        "paths": {
            "title": "paths",
            "type": "object",
            "minProperties": 1,
            "additionalProperties": false,
            "patternProperties": {
                "^[a-z][a-z0-9_]*$": {
                    "$ref": "#/definitions/pathsOrEndpoint"
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "hasAuthentication": {
            "type": "boolean",
            "default": false,
            "description": "add arguments for token authentication"
        },
        "paths": {"$ref": "#/definitions/paths"}
    },
    "required": [
        "paths"
    ],
    "additionalProperties": false
}