{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "identifier": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
        },
        "identifierCaseInsensitive": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$"
        },
        "httpMethods": {
            "type": "string",
            "enum": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE"
            ]
        }
    },
    "type": "object",
    "additionalProperties": false,
    "required": [
        "endpoints"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "endpoints": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "path",
                    "callable"
                ],
                "properties": {
                    "path": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/identifier"
                        },
                        "minItems": 1
                    },
                    "callable": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "imports",
                            "attributes"
                        ],
                        "properties": {
                            "imports": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/identifier"
                                }
                            },
                            "attributes": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/identifierCaseInsensitive"
                                }
                            }
                        }
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "name"
                            ],
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/identifier"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "default": {},
                                "nameOrigin": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "arguments": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "name"
                            ],
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/identifier"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "nameOrigin": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "httpMethod": {
                        "$ref": "#/definitions/httpMethods"
                    },
                    "input": {
                        "type": "object",
                        "nameOrigin": {
                            "type": "string"
                        }
                    },
                    "output": {
                        "type": "object"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        }
    }
}