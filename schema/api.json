{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "identifier": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
        },
        "type": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "string",
                        "number",
                        "integer",
                        "boolean"
                    ]
                },
                "content": {
                    "type": "string"
                },
                "multiple": {
                    "type": "boolean"
                }
            }
        },
        "identifierCaseInsensitive": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$"
        },
        "https": {
            "type": "string",
            "enum": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE"
            ]
        }
    },
    "type": "object",
    "additionalProperties": false,
    "required": [
        "endpoints",
        "version"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "endpoints": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "path",
                    "source",
                    "description"
                ],
                "properties": {
                    "path": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/identifier"
                        },
                        "minItems": 1
                    },
                    "source": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "imports",
                            "path"
                        ],
                        "properties": {
                            "imports": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/identifier"
                                }
                            },
                            "path": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/identifierCaseInsensitive"
                                }
                            }
                        }
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "name",
                                "type",
                                "description"
                            ],
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/identifier"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "source": {
                                    "type": "string"
                                },
                                "type": {
                                    "$ref": "#/definitions/type"
                                },
                                "flag": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "arguments": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "name",
                                "type",
                                "description"
                            ],
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/identifier"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "source": {
                                    "type": "string"
                                },
                                "type": {
                                    "$ref": "#/definitions/type"
                                }
                            }
                        }
                    },
                    "http": {
                        "$ref": "#/definitions/https"
                    },
                    "input": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "name",
                            "type",
                            "description"
                        ],
                        "properties": {
                            "name": {
                                "$ref": "#/definitions/identifier"
                            },
                            "description": {
                                "type": "string"
                            },
                            "source": {
                                "type": "string"
                            },
                            "type": {
                                "$ref": "#/definitions/type"
                            }
                        }
                    },
                    "output": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "type",
                            "description"
                        ],
                        "properties": {
                            "description": {
                                "type": "string"
                            },
                            "type": {
                                "$ref": "#/definitions/type"
                            }
                        }
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        }
    }
}